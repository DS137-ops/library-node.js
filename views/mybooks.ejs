<div class="container">
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Image</th>
            <th scope="col">Title</th>
            <th scope="col">Author</th>
            <th scope="col">Price</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% for(let mybook of mybooks){ %>
        <tr>
            <th><img width="50" height="50" src="/uploads/<%= mybook.image %>"></th>
            <td><%- mybook.title %></td>
            <td><%- mybook.author %></td>
            <td><%- mybook.price %></td>
            <td>
            <a class="btn btn-danger" href="/mybooks/delete/<%= mybook._id %>">Delete</a>
            <a class="btn btn-primary" href="/mybooks/update/<%= mybook._id %>">Update</a></td>
        </tr>
        <% } %>

      
    </tbody>
</table>
</div>


